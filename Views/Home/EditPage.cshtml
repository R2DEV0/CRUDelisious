@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css"/>
    <title>Edit this Dish</title>
</head>

<body>
        <div class="container">
        <h2> Edit @Model.Name </h2> <br>
        <a class="topLink" href="/"> Go Home </a>
        <hr/>

        <div class="form">
            <form asp-action="SubmitEdit" asp-route-DishId="@Model.DishId" asp-controller="Home" method="POST">

                <div class="form-group">
                    <label for="dishName"> Dish Name: </label>
                    <input class="form-control" asp-for="Name">
                </div>

                <div class="form-group">
                    <label for="chefName"> Chef's Name: </label>
                    <input class="form-control" asp-for="Chef">
                </div>

                <div class="form-group">
                    <label for="taste"> Tastiness: </label>
                    <select class="form-control" asp-for="Taste">
                        <option value="1"> 1 </option>
                        <option value="1"> 2 </option>
                        <option value="1"> 3 </option>
                        <option value="1"> 4 </option>
                        <option value="1"> 5 </option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="calories"> # of Calories </label>
                    <input class="form-control" asp-for="Calories">
                </div>

                <div class="form-group">
                    <label for="description" style="vertical-align: top;"> Description: </label>
                    <textarea class="form-control" name="description" id="textarea" cols="50" rows="3" asp-for="Description"></textarea>
                </div>
                <button class="btn btn-success btn-md"> Edit Dish </button>
            </form>
            <br>
            <span class="col-sm-12 text-danger" asp-validation-for="Name"></span> <br>
            <span class="col-sm-12 text-danger" asp-validation-for="Chef"></span> <br>
            <span class="col-sm-12 text-danger" asp-validation-for="Calories"></span> <br>
            <span class="col-sm-12 text-danger" asp-validation-for="Description"></span> <br>
            <span class="col-sm-12 text-danger" asp-validation-for="Taste"></span>
        </div>

    </div>


</body>

</html>